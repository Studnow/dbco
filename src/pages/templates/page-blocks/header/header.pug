block header
  .container-fluid
    .row.justify-content-between.align-items-center
      .col-1
      .col-1.lang
        a(href="#!").lang-link.lang-item_active ru
        a(href="#!").lang-link eng
      .col-2.logo
        a(href="#k").logo-link
          img(src=headerLogo, alt="" width="330" height="100")
      nav.col-5.nav.m-auto
        include ../../../includes/nav-bars/nav-bar
      .col-2.search
        input(type="search" placeholder="Search...").search-input
        button(type="submit").search-button
          svg(class="icon" width="25" height='25')
            use(xlink:href="#search-icon")
      .col-1