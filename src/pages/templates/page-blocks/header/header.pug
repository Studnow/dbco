  .container-fluid.mb-3
    .row.justify-content-between.align-items-center.px-xxl-5
      .col-6.col-lg-6.order-0.col-xl-1.text-center.d-flex.justify-content-center.mb-2.lang
        a(href="#!").lang-link.lang-item_active ru
        a(href="#!").lang-link eng
