        input(type="search" placeholder="Search...").search-input
        button(type="submit" name="search" aria-label="Search").search-button
          svg.icon(width="25" height='25')
            use(xlink:href="#search-icon")
      .col-6.order-1.d-flex.d-lg-none.justify-content-center
        include ../../../includes/buttons/simple-bar/bar-button